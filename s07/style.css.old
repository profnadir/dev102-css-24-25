*{
    box-sizing: border-box;
}
header{
    background-color: red;
    text-align: center;
    color: white;
    padding: 40px;
}
main{
    display: flex;
}
nav{
    background-color: green;
    height: 400px;
    flex-basis: 25%;
    padding: 20px;

}
section{
    background-color: blue;
    color: white;
    height: 400px;
    flex-basis: 50%;
    padding: 20px;

}
aside{
    background-color: yellow;
    height: 400px;
    flex-basis: 25%;
    padding: 20px;

}

footer{
    background-color:  black;
    color: white;
    text-align: center;
    padding: 50px;
}

@media only screen and (max-width: 768px) {
    main{
        flex-wrap: wrap;
    }
    nav{
        flex-basis: 25%;
        height: unset;
    }
    section{
        flex-basis: 75%;
        height: unset;

    }
    aside{
        flex-basis: 100%;
        height: unset;

    }
}

@media only screen and (max-width: 600px) {
    main{
        flex-direction: column;
    }
}